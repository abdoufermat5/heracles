# Heracles Development Environment
# This file contains environment variables for local development ONLY
# Copy to .env and fill in your values

# ===========================================
# LDAP Configuration
# ===========================================
LDAP_ORGANISATION=Heracles
LDAP_DOMAIN=heracles.local
LDAP_BASE_DN=dc=heracles,dc=local
LDAP_ADMIN_PASSWORD=admin_password_change_me
LDAP_CONFIG_PASSWORD=config_password_change_me
LDAP_BIND_DN=cn=admin,dc=heracles,dc=local
LDAP_URI=ldap://localhost:389
LDAP_USE_TLS=false
LDAP_POOL_SIZE=10

# ===========================================
# Heracles Admin User (for API authentication)
# ===========================================
# This user is created in LDAP by the bootstrap script
# and can be used to authenticate to the Heracles API
HRC_ADMIN_USER=hrc-admin
HRC_ADMIN_PASSWORD=hrc-admin-secret-change-me
HRC_ADMIN_UID=10000
HRC_ADMIN_GID=10000

# ===========================================
# PostgreSQL Configuration
# ===========================================
POSTGRES_DB=heracles
POSTGRES_USER=heracles
POSTGRES_PASSWORD=heracles_password_change_me
DATABASE_URL=postgresql://heracles:heracles_password_change_me@localhost:5432/heracles

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=redis_password_change_me
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Security
# ===========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=change_this_to_a_random_32_byte_hex_string_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# API Configuration
# ===========================================
DEBUG=true
LOG_LEVEL=DEBUG
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
API_HOST=0.0.0.0
API_PORT=8000

# ===========================================
# Email Validation (DEBUG mode only)
# ===========================================
# Allow test domains like .local, .test, .localhost in debug mode
ALLOW_TEST_EMAIL_DOMAINS=true
TEST_EMAIL_DOMAINS=heracles.local,test.local,localhost

# ===========================================
# UI Configuration
# ===========================================
VITE_API_BASE_PREFIX=/api/v1

# ===========================================
# Port Mappings (Host:Container)
# ===========================================
LDAP_PORT=389
LDAPS_PORT=636
PHPLDAPADMIN_PORT=8080
POSTGRES_PORT=5432
REDIS_PORT=6379
UI_PORT=3000

# ===========================================
# Heracles Core (Rust)
# ===========================================
RUST_LOG=heracles_core=debug,info
RUST_BACKTRACE=1

