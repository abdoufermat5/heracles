# Heracles Development Environment
# This file contains environment variables for local development ONLY
# Copy to .env and fill in your values

# === LDAP Configuration ===
LDAP_URI=ldap://localhost:389
LDAP_BASE_DN=dc=heracles,dc=local
LDAP_BIND_DN=cn=admin,dc=heracles,dc=local
LDAP_BIND_PASSWORD=admin_password_change_me
LDAP_USE_TLS=false
LDAP_POOL_SIZE=10

# === PostgreSQL ===
DATABASE_URL=postgresql://heracles:heracles_password@localhost:5432/heracles
POSTGRES_USER=heracles
POSTGRES_PASSWORD=heracles_password
POSTGRES_DB=heracles

# === Redis ===
REDIS_URL=redis://localhost:6379/0

# === Security ===
# Generate with: openssl rand -hex 32
SECRET_KEY=change_this_to_a_random_32_byte_hex_string_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === Application ===
DEBUG=true
LOG_LEVEL=DEBUG
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
API_HOST=0.0.0.0
API_PORT=8000

# === Heracles Core (Rust) ===
RUST_LOG=heracles_core=debug,info
RUST_BACKTRACE=1
