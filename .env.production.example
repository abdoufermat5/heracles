# =============================================================================
# Heracles — Production Environment Configuration
# =============================================================================
# Copy to .env and customize ALL values before deployment.
# Lines marked [CHANGE] MUST be modified for production.
# =============================================================================

# ===========================================================================
# LDAP Configuration
# ===========================================================================
LDAP_ORGANISATION=MyOrganisation                          # [CHANGE] Your org name
LDAP_DOMAIN=example.com                                   # [CHANGE] Your domain
LDAP_BASE_DN=dc=example,dc=com                           # [CHANGE] Must match domain
LDAP_ADMIN_PASSWORD=                                      # [CHANGE] Strong password (32+ chars)
LDAP_CONFIG_PASSWORD=                                     # [CHANGE] Strong password
LDAP_BIND_DN=cn=admin,dc=example,dc=com                  # [CHANGE] Must match BASE_DN
LDAP_POOL_SIZE=10

# ===========================================================================
# Heracles Admin User
# ===========================================================================
HRC_ADMIN_USER=hrc-admin
HRC_ADMIN_PASSWORD=                                       # [CHANGE] Strong password
HRC_ADMIN_UID=10000
HRC_ADMIN_GID=10000

# ===========================================================================
# PostgreSQL
# ===========================================================================
POSTGRES_DB=heracles
POSTGRES_USER=heracles
POSTGRES_PASSWORD=                                        # [CHANGE] Strong password

# ===========================================================================
# Redis
# ===========================================================================
REDIS_PASSWORD=                                           # [CHANGE] Strong password

# ===========================================================================
# Security — CRITICAL
# ===========================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=                                               # [CHANGE] REQUIRED — generate unique key

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================================================
# API Configuration
# ===========================================================================
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
GUNICORN_WORKERS=4                                        # Recommended: 2 * CPU cores + 1
GUNICORN_TIMEOUT=120

# ===========================================================================
# TLS Certificates
# ===========================================================================
# Paths to your TLS certificates (absolute or relative to project root)
TLS_CA_CERT=./pki/ca.crt
TLS_SERVER_CERT=./pki/server.crt
TLS_SERVER_KEY=./pki/server.key
TLS_LDAP_CERT=./pki/ldap.crt
TLS_LDAP_KEY=./pki/ldap.key

# ===========================================================================
# Docker Images (override to use pre-built images from GHCR)
# ===========================================================================
API_IMAGE=ghcr.io/abdoufermat5/heracles-api:latest
UI_IMAGE=ghcr.io/abdoufermat5/heracles-ui:latest

# ===========================================================================
# Networking
# ===========================================================================
HTTP_PORT=80
HTTPS_PORT=443
LDAP_PORT=389
LDAPS_PORT=636

# ===========================================================================
# Email Validation
# ===========================================================================
ALLOW_TEST_EMAIL_DOMAINS=false

# ===========================================================================
# UI
# ===========================================================================
VITE_API_BASE_PREFIX=/api/v1
