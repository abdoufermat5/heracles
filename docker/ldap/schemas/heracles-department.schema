# Heracles Department Schema
# =========================================
# This schema defines heraclesDepartment as AUXILIARY,
# marking organizationalUnits as departments for UI navigation.
#
# Similar to FusionDirectory's gosaDepartment approach.
# OID base: 1.3.6.1.4.1.99999.2 (Heracles Department)

# Optional attribute: Department category (e.g., division, team, project)
attributetype ( 1.3.6.1.4.1.99999.2.1.1
    NAME 'hrcDepartmentCategory'
    DESC 'Department category (e.g., division, team, project)'
    EQUALITY caseIgnoreMatch
    SUBSTR caseIgnoreSubstringsMatch
    SYNTAX 1.3.6.1.4.1.1466.115.121.1.15
    SINGLE-VALUE )

# Optional attribute: DN of department manager
attributetype ( 1.3.6.1.4.1.99999.2.1.2
    NAME 'hrcDepartmentManager'
    DESC 'DN of department manager'
    EQUALITY distinguishedNameMatch
    SYNTAX 1.3.6.1.4.1.1466.115.121.1.12
    SINGLE-VALUE )

# Auxiliary objectClass to mark OUs as departments
objectclass ( 1.3.6.1.4.1.99999.2.2.1
    NAME 'heraclesDepartment'
    DESC 'Marks an organizationalUnit as a Heracles department'
    SUP top
    AUXILIARY
    MAY ( hrcDepartmentCategory $ hrcDepartmentManager $ description $ labeledURI ) )
