# =============================================================================
# Heracles Mail Schema - LDIF Format
# =============================================================================
# For loading into OpenLDAP via cn=config
# OID Base: 1.3.6.1.4.1.99999.1.3.x (Heracles mail)
# =============================================================================

dn: cn=heracles-mail,cn=schema,cn=config
objectClass: olcSchemaConfig
cn: heracles-mail
#
# Attribute Definitions
#
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.3.1
  NAME 'hrcMailServer'
  DESC 'Heracles - Primary mail server for this account'
  EQUALITY caseIgnoreIA5Match
  SUBSTR caseIgnoreIA5SubstringsMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.26
  SINGLE-VALUE )
#
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.3.2
  NAME 'hrcMailQuota'
  DESC 'Heracles - Mail quota in MiB'
  EQUALITY caseIgnoreIA5Match
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.26
  SINGLE-VALUE )
#
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.3.3
  NAME 'hrcMailAlternateAddress'
  DESC 'Heracles - Alternative email addresses (aliases)'
  EQUALITY caseIgnoreIA5Match
  SUBSTR caseIgnoreIA5SubstringsMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.26 )
#
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.3.4
  NAME 'hrcMailForwardingAddress'
  DESC 'Heracles - Mail forwarding destinations'
  EQUALITY caseIgnoreIA5Match
  SUBSTR caseIgnoreIA5SubstringsMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.26 )
#
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.3.5
  NAME 'hrcMailMaxSize'
  DESC 'Heracles - Maximum message size in KB'
  EQUALITY integerMatch
  ORDERING integerOrderingMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.27
  SINGLE-VALUE )
#
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.3.6
  NAME 'hrcVacationMessage'
  DESC 'Heracles - Vacation auto-reply message text'
  EQUALITY caseIgnoreMatch
  SUBSTR caseIgnoreSubstringsMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.15
  SINGLE-VALUE )
#
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.3.7
  NAME 'hrcMailDeliveryMode'
  DESC 'Heracles - Delivery mode flags: V=vacation, L=local-only, I=forward-only'
  EQUALITY caseIgnoreIA5Match
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.26
  SINGLE-VALUE )
#
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.3.8
  NAME 'hrcVacationStart'
  DESC 'Heracles - Vacation start date (YYYYMMDD format)'
  EQUALITY caseIgnoreIA5Match
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.26
  SINGLE-VALUE )
#
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.3.9
  NAME 'hrcVacationStop'
  DESC 'Heracles - Vacation end date (YYYYMMDD format)'
  EQUALITY caseIgnoreIA5Match
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.26
  SINGLE-VALUE )
#
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.3.10
  NAME 'hrcGroupMailLocalOnly'
  DESC 'Heracles - Restrict group mail to local senders only'
  EQUALITY booleanMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.7
  SINGLE-VALUE )
#
# ObjectClass Definitions
#
olcObjectClasses: ( 1.3.6.1.4.1.99999.1.3.100
  NAME 'hrcMailAccount'
  DESC 'Heracles - Mail account settings for a user'
  SUP top AUXILIARY
  MUST ( mail )
  MAY ( hrcMailServer $ hrcMailDeliveryMode $ hrcMailQuota $
        hrcMailAlternateAddress $ hrcMailForwardingAddress $
        hrcVacationMessage $ hrcVacationStart $ hrcVacationStop ) )
#
olcObjectClasses: ( 1.3.6.1.4.1.99999.1.3.101
  NAME 'hrcGroupMail'
  DESC 'Heracles - Mailing list settings for a group'
  SUP top AUXILIARY
  MUST ( mail )
  MAY ( hrcMailServer $ hrcMailAlternateAddress $ hrcMailForwardingAddress $
        hrcGroupMailLocalOnly $ hrcMailMaxSize ) )
