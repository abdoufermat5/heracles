# Heracles API Environment Variables
# ===================================
# Copy this file to .env and adjust values
# Note: When running via docker-compose, the root .env file is used instead

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
JWT_ISSUER=heracles
JWT_AUDIENCE=heracles-api
JWT_SECRETS=your-secret-key-change-in-production
COOKIE_SECURE=true
COOKIE_SAMESITE=lax
TRUSTED_PROXY_HOSTS=["proxy","127.0.0.1","::1"]

# LDAP Configuration
LDAP_URI=ldaps://localhost:636
LDAP_BASE_DN=dc=heracles,dc=local
LDAP_BIND_DN=cn=admin,dc=heracles,dc=local
LDAP_BIND_PASSWORD=admin_secret
LDAP_USE_TLS=false
LDAP_POOL_SIZE=10

# PostgreSQL Configuration
DATABASE_URL=postgresql+asyncpg://heracles:heracles_secret@localhost:5432/heracles

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=redis_secret

# Session Configuration
SESSION_TIMEOUT=3600

# Password Configuration
PASSWORD_HASH_METHOD=argon2
PASSWORD_MIN_LENGTH=8

# Logging
LOG_LEVEL=INFO
